@model madeupu.API.Data.Entities.Project

@{
    ViewData["Title"] = "ProjectParticipations";
}

<link href="~/css/ProjectStyles/ProjectParticipationStyles.css" rel="stylesheet" />

<h1>Administración de participaciones de @Model.Name</h1>

<div class="project-participations">
    @if (Model.Participations.Count > 0)
    {

        @foreach (var item in Model.Participations)
        {
            @if (item.ParticipationType.Description != "Creador")
            {

                <div class="project-participations__item">
                    <img src="@item.User.ImageFullPath" alt="Imagen de usuario" />
                    <p>
                        @Html.DisplayFor(modelItem => item.ParticipationType.Description)
                    </p>
                    <h3>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </h3>
                    <p>
                        @Html.DisplayFor(modelItem => item.Message)
                    </p>
                    @if (item.ActiveParticipation == true)
                    {
                        <p>
                            participante activo
                        </p>
                    }
                    else
                    {
                        <p>
                            Pendiente por aceptar solicitud
                        </p>
                    }
                    <div class="project-participations__item-buttons">
                        @if (item.ActiveParticipation == false)
                        {
                            <a asp-action="AcceptRequest" asp-controller="Participations" asp-route-id="@item.Id" class="btn btn-success">Aceptar</a>
                        }
                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog">Borrar</button>
                    </div>

                </div>
            }

        }

    }
    else
    {
        <p> Actualmente este proyecto no tiene participaciones diferentes al creador</p>
    }

</div>


<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="/js/deleteDialog.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
            // Delete item
            sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Participations/Delete/', false);
        });
    </script>
}