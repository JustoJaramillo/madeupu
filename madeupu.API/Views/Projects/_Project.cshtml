@model madeupu.API.Models.ProjectViewModel
@*<link rel="stylesheet" type="text/css" href="~/css/ProjectStyles/ProjectCreateStyles.css" />*@

<div class="project-create__fields">

    @*Project's title and category*@
    <div class="project-create__fields-row">
        <div class="form-group project-create__project-title">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group project-create__field">
            <label asp-for="ProjectCategoryId" class="control-label"></label>
            <select asp-for="ProjectCategoryId" asp-items="Model.ProjectCategories" class="form-control"></select>
            <span asp-validation-for="ProjectCategoryId" class="text-danger"></span>
        </div>
    </div>

    @*website and address*@
    <div class="project-create__fields-row">
        <div class="form-group project-create__field">
            <label asp-for="Website" class="control-label"></label>
            <input asp-for="Website" class="form-control" />
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>
        <div class="form-group project-create__field">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    @*Start date and  location*@
    <div class="project-create__fields-row">

        @*Start date*@
        <div class="form-group project-create__field">
            <label asp-for="BeginAt" class="control-label"></label>
            <input asp-for="BeginAt" class="form-control" />
            <span asp-validation-for="BeginAt" class="text-danger"></span>
        </div>

        @*location selects*@
        <div class="project-create__field project-create__field-location">
            <div class="form-group project-create__field">
                <label asp-for="CountryId" class="control-label"></label>
                <select asp-for="CountryId" asp-items="Model.Countries" class="form-control"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <div class="form-group project-create__field">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" asp-items="Model.Regions" class="form-control"></select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            <div class="form-group project-create__field">
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" asp-items="Model.Cities" class="form-control"></select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
        </div>
    </div>

    @*Description*@
    <div class="project-create__fields-row">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control project-create__textarea" ></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

</div>
