@model madeupu.API.Models.ProjectViewModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" type="text/css" href="~/css/ProjectStyles/ProjectCreateStyles.css" />

<div class="project-create">
    <div class="project-create__content">
        <h1 class="project-create__title">Create</h1>
        <form asp-action="Create" class="project-create__form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Project" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}