@model madeupu.API.Models.ProjectViewModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/ProjectStyles/ProjectCreateStyles.css" />

<div class="project-create">
    <div class="project-create__content">
        <h1 class="project-create__title">Creación de un nuevo proyecto</h1>
        <form asp-action="Create" class="project-create__form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group project-create__field" style="margin-top: 2rem; width:100%;">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <partial name="_Project" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @*<a asp-action="Index" class="btn btn-success">Regresar</a>*@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}