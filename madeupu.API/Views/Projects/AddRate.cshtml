@model madeupu.API.Models.RatingViewModel

@{
    ViewData["Title"] = "AddRate";
}

<link rel="stylesheet" type="text/css" href="~/css/ProjectStyles/AddRateStyles.css" />

<h2>Calificar un proyecto</h2>

<h5>  Da click en una estrella para calificar el proyecto en una escala de uno a cinco, siendo cinco el más alto  </h5>

<form asp-action="AddRate" class="single-project__rate-box">
    <input type="hidden" asp-for="ProjectId" />
    <div class="single-project__rate-list-container">
        <div class="single-project__rate-list">
            <div class="single-project__rate-item">
                <input asp-for="Rate" class="form-control single-project__rate-input" type="submit" value="1" />
            </div>
            <div class="single-project__rate-item">
                <input asp-for="Rate" class="form-control single-project__rate-input" type="submit" value="2" />
            </div>
            <div class="single-project__rate-item">
                <input asp-for="Rate" class="form-control single-project__rate-input" type="submit" value="3" />
            </div>
            <div class="single-project__rate-item">
                <input asp-for="Rate" class="form-control single-project__rate-input" type="submit" value="4" />
            </div>
            <div class="single-project__rate-item">
                <input asp-for="Rate" class="form-control single-project__rate-input" type="submit" value="5" />
            </div>
        </div>
    </div>

    <a style="margin: 2rem auto;" asp-action="SingleProject" asp-route-id="@Model.ProjectId" class="btn btn-info">Regresar sin calificar</a>
</form>

